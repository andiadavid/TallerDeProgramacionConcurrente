programa perimetro
procesos 
  proceso iniciarRobots
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
  fin
  proceso mandarCuad
  variables
    cuad:numero
  comenzar
    Random(cuad,1,7)
    EnviarMensaje(cuad,r1)
    Random(cuad,1,7)
    EnviarMensaje(cuad,r2)
    Random(cuad,1,7)
    EnviarMensaje(cuad,r3)
  fin
  proceso recibirYMandar
  variables
    id:numero
    num:numero
  comenzar
    num:=20
    repetir(3)
      RecibirMensaje(id,*)
      si(id=1)
        EnviarMensaje(num,r1)
      sino
        si(id=2)
          EnviarMensaje(num,r2)
        sino
          si(id=3)
            EnviarMensaje(num,r3)
      num:=num+1        
  fin
    {---------------------------}
  proceso juntarF
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
  fin
  proceso juntarP
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
  fin
  proceso preguntarTrabajar(E id:numero)
  comenzar
    si(id=1)
      juntarF
    sino
      si(id=2)
        juntarF
        juntarP
      sino
        si(id=3)
          juntarP
  fin
  proceso irArriba(E id:numero;E lado:numero)
  variables
    Av:numero
    Ca:numero
  comenzar
    Av:=PosAv
    repetir(lado)
      preguntarTrabajar(id)    
      Ca:=PosCa
      BloquearEsquina(Av,Ca+1)
      mover
      LiberarEsquina(Av,Ca)
    derecha
  fin
  proceso irDerecha(E id:numero;E lado:numero)
  variables
    Av:numero
    Ca:numero
  comenzar
    Ca:=PosCa
    repetir(lado)
      preguntarTrabajar(id)    
      Av:=PosAv
      BloquearEsquina(Av+1,Ca)
      mover
      LiberarEsquina(Av,Ca)
    derecha
  fin
  proceso irAbajo(E id:numero;E lado:numero)
  variables
    Av:numero
    Ca:numero
  comenzar
    Av:=PosAv
    repetir(lado)
      preguntarTrabajar(id)      
      Ca:=PosCa
      BloquearEsquina(Av,Ca-1)
      mover
      LiberarEsquina(Av,Ca)
    derecha
  fin
  proceso irIzquierda(E id:numero;E lado:numero)
  variables
    Av:numero
    Ca:numero
  comenzar
    Ca:=PosCa
    repetir(lado)
      preguntarTrabajar(id)    
      Av:=PosAv
      BloquearEsquina(Av-1,Ca)
      mover
      LiberarEsquina(Av,Ca)
    derecha
  fin
areas
  cf:AreaP(1,1,1,1)
  cuadrado:AreaPC(2,2,16,16)
  calles:AreaPC(1,20,100,22)
robots
  robot florero
  variables
    id:numero
    lado:numero
    calle:numero
    llegue:boolean
  comenzar
    RecibirMensaje(id,rf)
    RecibirMensaje(lado,rf)
    irArriba(id,lado)
    irDerecha(id,lado)
    irAbajo(id,lado)
    irIzquierda(id,lado)  
    
    EnviarMensaje(id,rf)
    RecibirMensaje(calle,rf)
    Pos(1,calle)

    LiberarEsquina(2,2)
    derecha
    {}
    llegue:=F
    mientras(~(llegue))&(HayFlorEnLaBolsa)
      depositarFlor
      mover
      si(PosAv>99)
        llegue:=V
  fin
  robot floreroPapelero
  variables
    id:numero
    lado:numero
    calle:numero
    llegue:boolean
  comenzar
    RecibirMensaje(id,rf)
    RecibirMensaje(lado,rf)
    irArriba(id,lado)
    irDerecha(id,lado)
    irAbajo(id,lado)
    irIzquierda(id,lado)  
    
    EnviarMensaje(id,rf)
    RecibirMensaje(calle,rf)
    Pos(1,calle)

    LiberarEsquina(5,5)
    derecha
    {}
    llegue:=F
    mientras(~(llegue))&((HayFlorEnLaBolsa)|(HayPapelEnLaBolsa))
      si(HayFlorEnLaBolsa)
        depositarFlor
      si(HayPapelEnLaBolsa)
        depositarPapel  
      mover
      si(PosAv>99)
        llegue:=V
  fin
  robot papelero
  variables
    id:numero
    lado:numero
    calle:numero
    llegue:boolean
  comenzar
    RecibirMensaje(id,rf)
    RecibirMensaje(lado,rf)
    irArriba(id,lado)
    irDerecha(id,lado)
    irAbajo(id,lado)
    irIzquierda(id,lado)  
    
    EnviarMensaje(id,rf)
    RecibirMensaje(calle,rf)
    Pos(1,calle)

    LiberarEsquina(9,9)
    derecha
    {}
    llegue:=F
    mientras(~(llegue))&(HayPapelEnLaBolsa)
      depositarPapel
      mover
      si(PosAv>99)
        llegue:=V
  fin
  robot fiscal
  comenzar
    iniciarRobots
    mandarCuad
    recibirYMandar
  fin
variables
  rf:fiscal
  r1:florero
  r2:floreroPapelero
  r3:papelero
comenzar
  AsignarArea(rf,cf)
  AsignarArea(r1,cuadrado)
  AsignarArea(r2,cuadrado)
  AsignarArea(r3,cuadrado)
  AsignarArea(r1,calles)
  AsignarArea(r2,calles)
  AsignarArea(r3,calles)
  Iniciar(rf,1,1)
  Iniciar(r1,2,2)
  Iniciar(r2,5,5)
  Iniciar(r3,9,9)
fin
