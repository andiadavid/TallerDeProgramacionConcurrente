programa perimetro
procesos 
  proceso iniciarRobots
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
  fin
  proceso recibirYMandar
  variables
    id:numero
    num:numero
  comenzar
    num:=20
    repetir(3)
      RecibirMensaje(id,*)
      si(id=1)
        EnviarMensaje(num,r1)
      sino
        si(id=2)
          EnviarMensaje(num,r2)
        sino
          si(id=3)
            EnviarMensaje(num,r3)
      num:=num+1        
  fin
    {---------------------------}
  proceso juntarF
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
  fin
  proceso juntarP
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
  fin
areas
  cf:AreaP(1,1,1,1)
  cuadrado:AreaPC(2,2,16,16)
  calles:AreaPC(1,20,100,22)
robots
  robot florero
  variables
    id:numero
    calle:numero
    llegue:boolean
  comenzar
    RecibirMensaje(id,rf)
    repetir(4)
      repetir(6)
        juntarF
        si(PosAv+1=5)&(PosCa=8)
          BloquearEsquina(5,8)
        si(PosAv=8)&(PosCa-1=5)
          BloquearEsquina(8,5)  
        mover
        si(PosAv=6)&(PosCa=8)
          LiberarEsquina(5,8)
        si(PosAv=8)&(PosCa=4)
          LiberarEsquina(8,5)    
      derecha
    juntarF  
    EnviarMensaje(id,rf)
    RecibirMensaje(calle,rf)
    Pos(1,calle)
    derecha
    {}
    llegue:=F
    mientras(~(llegue))&(HayFlorEnLaBolsa)
      depositarFlor
      mover
      si(PosAv>99)
        llegue:=V
  fin
  robot floreroPapelero
  variables
    id:numero
    calle:numero
    llegue:boolean
  comenzar
    RecibirMensaje(id,rf)
    repetir(4)
      repetir(10)
        juntarF
        juntarP
        si(PosAv=5)&(PosCa+1=8)
          BloquearEsquina(5,8)
        si(PosAv+1=9)&(PosCa=15)
          BloquearEsquina(9,15)
        si(PosAv=15)&(PosCa-1=9)
          BloquearEsquina(15,9)
        si(PosAv-1=8)&(PosCa=5)
          BloquearEsquina(8,5)  
        mover
        si(PosAv=5)&(PosCa=9)
          LiberarEsquina(5,8)
        si(PosAv=10)&(PosCa=15)
          LiberarEsquina(9,15)
        si(PosAv=15)&(PosCa=8)
          LiberarEsquina(15,9)
        si(PosAv=7)&(PosCa=4)
          LiberarEsquina(8,5)    
      derecha
    juntarF
    juntarP
    EnviarMensaje(id,rf)
    RecibirMensaje(calle,rf)
    Pos(1,calle)
    derecha
    {}
    llegue:=F
    mientras(~(llegue))&((HayFlorEnLaBolsa)|(HayPapelEnLaBolsa))
      si(HayFlorEnLaBolsa)
        depositarFlor
      si(HayPapelEnLaBolsa)
        depositarPapel  
      mover
      si(PosAv>99)
        llegue:=V
  fin
  robot papelero
  variables
    id:numero
    calle:numero
    llegue:boolean
  comenzar
    RecibirMensaje(id,rf)
    repetir(4)
      repetir(7)
        juntarP
        si(PosAv=9)&(PosCa+1=15)
          BloquearEsquina(9,15)
        si(PosAv-1=15)&(PosCa=9)
          BloquearEsquina(15,9)
        mover
        si(PosAv=9)&(PosCa=16)
          LiberarEsquina(9,15)
        si(PosAv=14)&(PosCa=9)
          LiberarEsquina(15,9) 
      derecha
    juntarP
    EnviarMensaje(id,rf)
    RecibirMensaje(calle,rf)
    Pos(1,calle)
    derecha
    {}
    llegue:=F
    mientras(~(llegue))&(HayPapelEnLaBolsa)
      depositarPapel
      mover
      si(PosAv>99)
        llegue:=V
  fin
  robot fiscal
  variables
    id:numero
  comenzar
    iniciarRobots
    recibirYMandar
  fin
variables
  rf:fiscal
  r1:florero
  r2:floreroPapelero
  r3:papelero
comenzar
  AsignarArea(rf,cf)
  AsignarArea(r1,cuadrado)
  AsignarArea(r2,cuadrado)
  AsignarArea(r3,cuadrado)
  AsignarArea(r1,calles)
  AsignarArea(r2,calles)
  AsignarArea(r3,calles)
  Iniciar(rf,1,1)
  Iniciar(r1,2,2)
  Iniciar(r2,5,5)
  Iniciar(r3,9,9)
fin
