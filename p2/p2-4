programa accesoArea
procesos 
  proceso juntar(ES t:numero) 
  comenzar 
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      t:=t+1
    mientras(HayPapelEnLaEsquina)
      tomarPapel
      t:=t+1  
  fin
  proceso enviar(E rob:numero;ES c1:numero;ES c2:numero;ES c3:numero;ES c4:numero)
  comenzar
    si(rob=1)
      EnviarMensaje(1,r1)
    sino
      si(rob=2)
        EnviarMensaje(2,r2)
      sino
        si(rob=3)
          EnviarMensaje(3,r3)
        sino
          si(rob=4)
            EnviarMensaje(4,r4)
  fin 

areas
  areaRestringida:AreaPC(25,25,75,75)
  cComp:AreaPC(25,1,40,1)
  cf:AreaP(1,1,1,1)
robots
  robot trabajador
  variables
    id:numero
  robot fiscal  
  variables
    rob:numero
  comenzar
    repetir(10)
      Random(rob,1,4)
      enviar(rob)
      

  fin

variables
  r1:trabajador
  r2:trabajador
  r3:trabajador
  r4:trabajador
  rf:fiscal
comenzar
  AsignarArea(rf,cf)
  AsignarArea(r1,cComp)
  AsignarArea(r1,areaRestringida)
  AsignarArea(r2,cComp)
  AsignarArea(r2,areaRestringida)
  AsignarArea(r3,cComp)
  AsignarArea(r3,areaRestringida)
  AsignarArea(r4,cComp)
  AsignarArea(r4,areaRestringida)

  Iniciar(rf,1,1)
  Iniciar(r1,25,1)
  Iniciar(r2,30,1)
  Iniciar(r3,35,1)
  Iniciar(r4,40,1)
fin
